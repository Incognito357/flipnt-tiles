MaterialDef background {
    MaterialParameters {
        Color Color (Color)
        Int Seed
        Float Speed
        Float Scale
        Float Strength
        Boolean ScreenSpace
    }

    Technique {
        VertexShader GLSL310 GLSL300 GLSL100 GLSL150:   shaders/background.vert
        FragmentShader GLSL310 GLSL300 GLSL100 GLSL150: shaders/background.frag

        WorldParameters {
            WorldViewProjectionMatrix
            WorldMatrix
            Time
        }
    }
}